{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ThinkStack",
  "version": "1.2.2",
  "identifier": "com.thinkstack.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ThinkStack",
        "width": 400,
        "height": 540,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
